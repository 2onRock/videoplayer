<Window x:Class="videoplayer1._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Video Player" Height="500" Width="1178" 
        MinWidth="900" MinHeight="500"
        MaxWidth="1700" MaxHeight="900"
        Background="{StaticResource PrimaryBackgroundColor}">

    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="BorderBrush" Value="Gray"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FF848484"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF848484"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FFF9F9F9"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Меню -->
        <Menu Grid.ColumnSpan="2" Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Open Video" Click="OpenVideo_Click"/>
                <MenuItem Header="Add Video to Database" Click="AddVideoToDatabase_Click"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Play" Click="PlayVideo_Click"/>
                <MenuItem Header="Pause" Click="PauseVideo_Click"/>
                <MenuItem Header="Restart"/>
            </MenuItem>
        </Menu>

        <!-- Информация -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="{StaticResource SecondaryBackgroundColor}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,0,1,0"
                Padding="10">
            <StackPanel>
                <GroupBox Header="Current Info" Margin="0,0,0,10">
                    <StackPanel>
                        <Label Content="Title:"/>
                        <TextBlock x:Name="titleTextBlock" TextWrapping="Wrap" 
                                 Foreground="{StaticResource TextPrimaryColor}" 
                                 Margin="5,0,5,10"/>
                        <Label Content="Comment:"/>
                        <TextBlock x:Name="commentTextBlock" TextWrapping="Wrap" 
                                 Foreground="{StaticResource TextPrimaryColor}" 
                                 Margin="5,0,5,5"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="New Info">
                    <StackPanel>
                        <Label Content="Title"/>
                        <TextBox x:Name="titleTextBox"/>
                        <Label Content="Comment"/>
                        <TextBox x:Name="commentTextBox" Height="60" 
                                TextWrapping="Wrap" AcceptsReturn="True"/>
                        <Button Content="Save" Click="ReWriteFile_Click" 
                                HorizontalAlignment="Right" Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Border>

        <!-- Медиаэлемент -->
        <Grid Grid.Row="1" Grid.Column="1">
            <MediaElement x:Name="videoPlayer" 
                         LoadedBehavior="Manual"
                         MediaOpened="VideoPlayer_MediaOpened"
                         MediaEnded="VideoPlayer_MediaOpened"/>
            
            <Border VerticalAlignment="Bottom" Background="#80000000" Padding="10">
                <StackPanel>
                    <Slider x:Name="timeSlider" Margin="0,0,0,10"
                            AutoToolTipPlacement="BottomRight"
                            LostMouseCapture="timeSlider_LostMouseCapture"
                            PreviewMouseDown="timeSlider_PreviewMouseDown"/>

                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="⏮" Click="LastVideo_Click" 
                                    Style="{StaticResource PlayerButtonStyle}"/>
                            <Button Content="▶" Click="PlayVideo_Click" 
                                    Style="{StaticResource PlayerButtonStyle}"/>
                            <Button Content="⏸" Click="PauseVideo_Click" 
                                    Style="{StaticResource PlayerButtonStyle}"/>
                            <Button Content="⏭" Click="NextVideo_Click" 
                                    Style="{StaticResource PlayerButtonStyle}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Label Content="🔊" VerticalAlignment="Center" FontSize="16"/>
                            <Slider Width="100" Value="0.5" Maximum="1" 
                                    x:Name="volumeSlider" ValueChanged="volumeSlider_ValueChanged"/>
                            <Label Content="⚡" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="16"/>
                            <Slider Width="100" Value="1" Minimum="0.5" Maximum="2"
                                    x:Name="speedSlider" ValueChanged="speedSlider_ValueChanged"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
